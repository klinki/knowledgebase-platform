{
  "manifest_version": 3,
  "name": "Sentinel Knowledge Collector",
  "version": "1.0.0",
  "description": "Capture high-signal content from X (Twitter) and web pages to your Sentinel knowledge base",
  "permissions": [
    "storage",
    "activeTab",
    "bookmarks",
    "notifications",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "<all_urls>"
  ],
"content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "css": [
        "dist/content.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/webpage-content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
